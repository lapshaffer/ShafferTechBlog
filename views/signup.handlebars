<!-- sign up, link to sign in -->

<div class="card">
    <h3 class="card-header">Sign Up</h3>
    <form id="signupForm" class="card-body">
        <label for="usernameSignup" class="form-label">Username</label>
        <input id="usernameSignup" type="text" class="form-input" />


        <label class="form-label" for="passwordSignup">Password</label>
        <input id="passwordSignup" type="password" class="form-input" />

        <button type="submit" class="btn">Sign up!</button>
        <a class="loginLink" href="/login">Already have an account? Log in!</a>
    </form>
</div>

<script src="/js/signup.js"></script>